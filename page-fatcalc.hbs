<body style="background:url('{{@blog.cover}}');background-size:cover;background-attachment:fixed;">

    <header>

        {{navigation}}

    </header>

    <div class="post-wrapper">
        {{#post}} 
        {{#if image}}<img class="cover-img" src="{{image}}">{{/if}}
        <h1>{{title}}</h1>

        {{content}}
        
        {{/post}}
        
        <select id="caliper_gender" name="caliper_gender" onChange="caliper_onGenderChange()">
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
        <select id="caliper_method" name="caliper_method" onChange="caliper_onMethodChange()">
                            <option value="31">3-Falten Methode nach Jackson-Pollock</option>
                            <option value="7">7-Falten Methode nach Jackson-Pollock</option>
                        </select>
         <form>
    
    <div class="group">      
      <input type="text" id="brust_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Brust</label>
    </div>
      
    <div class="group">      
      <input type="text" id="bauch_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Bauch</label>
    </div>
    
              <div class="group">      
      <input type="text" id="oberschenkel_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Oberschenkel</label>        
    </div>
             
             <div class="group">      
      <input type="text" id="schulterblatt_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Schulterblatt</label>
             </div>
             
                <div class="group">      
      <input type="text" id="trizeps_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Trizeps</label>
             </div>
              <div class="group">      
      <input type="text" id="achsel_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Achsel</label>
             </div>
              <div class="group">      
      <input type="text" id="hueft_falte" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Hüfte</label>
             </div>
             
             <div class="group">      
      <input type="text" id="caliper_input" name="caliper_input" required>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Alter</label>
             </div>
                     
             <div class="group">      
      <input id="caliper_fat_result" name="caliper_input" type="text" readonly>
      <span class="highlight"></span>
      <span class="bar"></span>
      <label>Ergebnis Körperfettanteil</label>
             </div>
  </form>
        
         <input name="berechnen" onClick="caliper_calculateFat();" type="submit" value="Körperfettanteil ermitteln">

