            function caliper_onGenderChange() {
                var method = document.getElementById('caliper_method').value;
                if (method == 31) {
                    var gender = document.getElementById('caliper_gender').value;
                    var trizeps = document.getElementById('trizeps_falte');
                    var huefte = document.getElementById('hueft_falte');
                    var brust = document.getElementById('brust_falte');
