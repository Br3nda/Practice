                        enable(bauch);
                        enable(oberschenkel);
                    } else if (gender == 1) {
                        var trizeps = document.getElementById('trizeps_falte');
                        var bauch = document.getElementById('bauch_falte');
                        var huefte = document.getElementById('hueft_falte');
                        enable(trizeps);
                        enable(bauch);
                        enable(huefte);
                    }
                } else if (method == 7) {
                    var alter = document.getElementById('caliper_alter');
                    enable(alter);
                    var brust = document.getElementById('brust_falte');
                    var bauch = document.getElementById('bauch_falte');
                    var achsel = document.getElementById('achsel_falte');
                    var schulterblatt = document.getElementById('schulterblatt_falte');
                    var huefte = document.getElementById('hueft_falte');
                    var oberschenkel = document.getElementById('oberschenkel_falte');
                    var trizeps = document.getElementById('trizeps_falte');
                    enable(brust);
                    enable(bauch);
                    enable(achsel);
                    enable(schulterblatt);
                    enable(huefte);
                    enable(oberschenkel);
                    enable(trizeps);
                }

                var kfa = document.getElementById('caliper_fat_result');
                kfa.style.backgroundColor = "#F6F6F6";
                enable(kfa);
            }

            function disable(element) {
                element.disabled = true;
                element.style.backgroundColor = "#111111";
                element.value = "";
            }

            function enable(element) {
                element.disabled = false;
                element.style.backgroundColor = "#ffffff";
            }
