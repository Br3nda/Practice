                        enable(brust);
                        enable(oberschenkel);
                        disable(trizeps);
                        disable(huefte);
                    } else if (gender == 1) {
                        disable(brust);
                        disable(oberschenkel);
                        enable(trizeps);
                        enable(huefte);
                    }
                }
            }

            function caliper_onMethodChange() {
                var method = document.getElementById('caliper_method').value;
                var gender = document.getElementById('caliper_gender').value;
                var allElements = document.getElementsByName("caliper_input");
                for (var i = 0; i < allElements.length; i++) {
                    disable(allElements[i]);
                }
                if (method == 31) {
                    var alter = document.getElementById('caliper_alter');
                    enable(alter);
                    if (gender == 0) {
                        var brust = document.getElementById('brust_falte');
                        var bauch = document.getElementById('bauch_falte');
                        var oberschenkel = document.getElementById('oberschenkel_falte');
