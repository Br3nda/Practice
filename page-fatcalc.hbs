                    enable(bauch);
                    enable(achsel);
                    enable(schulterblatt);
                    enable(huefte);
                    enable(oberschenkel);
                    enable(trizeps);
                }

                var kfa = document.getElementById('caliper_fat_result');
                kfa.style.backgroundColor = "#F6F6F6";
                enable(kfa);
            }

            function disable(element) {
                element.disabled = true;
                element.style.backgroundColor = "#111111";
                element.value = "";
            }

            function enable(element) {
                element.disabled = false;
                element.style.backgroundColor = "#ffffff";
