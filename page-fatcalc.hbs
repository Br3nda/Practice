<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="HandheldFriendly" content="True">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name=viewport content="width=device-width, initial-scale=1">

    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}">

    <link rel="stylesheet" href="{{asset "css/style.css"}}">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora:400,700">

    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{@blog.logo}}">
    <link rel="shortcut icon" href="{{@blog.logo}}"> {{ghost_head}}

</head>
<script type="text/javascript">
    var xr_xr = document.getElementById("xr_xr")

</script>

<body style="background:url('{{@blog.cover}}');background-size:cover;background-attachment:fixed;">

    <header>

        {{navigation}}

    </header>

    <div class="post-wrapper">
        {{#post}} 
        {{#if image}}<img class="cover-img" src="{{image}}">{{/if}}
        <h1>{{title}}</h1>

        {{content}}
        
        {{/post}}
        
        <table align="center">
            <tbody>
                <tr>
                    <td>&nbsp;
                    </td>
                    <td>
                        <select id="caliper_gender" name="caliper_gender" onChange="caliper_onGenderChange()">
                            <option value="0">Männlich</option>
                            <option value="1">Weiblich</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Methode:</strong></td>
                    <td>
                        <select id="caliper_method" name="caliper_method" onChange="caliper_onMethodChange()">
                            <option value="31">3-Falten Methode nach Jackson-Pollock</option>
                            <option value="7">7-Falten Methode nach Jackson-Pollock</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Brust:</strong></td>
                    <td>
                        <input id="brust_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Bauch:</strong></td>
                    <td>
                        <input id="bauch_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Oberschenkel:</strong></td>
                    <td>
                        <input id="oberschenkel_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Schulterblatt:</strong></td>
                    <td>
                        <input disabled="disabled" id="schulterblatt_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Trizeps:</strong></td>
                    <td>
                        <input disabled="disabled" id="trizeps_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>
                <tr>
                    <td>
                        <strong>Achsel:</strong></td>
                    <td>
                        <input disabled="disabled" id="achsel_falte" name="caliper_input" style="background-color: #222222;" type="text"> [mm]</td>
                </tr>

                <tr>
                    <td>
                        <strong>Hüfte:</strong></td>
                    <td>
                        <input disabled="disabled" id="hueft_falte" name="caliper_input" type="text"> [mm]</td>
                </tr>




                <tr>
                    <td>
                        <strong>Alter:</strong></td>
                    <td>
                        <input id="caliper_alter" name="caliper_input" type="text"> [Jahr]</td>
                </tr>

                <tr>
                    <td>
                        <strong>Ergebnis Körperfettanteil:</strong></td>
                    <td>
                        <input id="caliper_fat_result" name="caliper_input" type="text" readonly> [%]</td>
                </tr>
                <tr>
                    <td>&nbsp;
                    </td>
                    <td>
                        <input name="berechnen" onClick="caliper_calculateFat();" type="submit" value="Körperfettanteil ermitteln">
                    </td>
                </tr>


            </tbody>
        </table>
  
